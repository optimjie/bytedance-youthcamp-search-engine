                data_id = #{dataId},
            </if>
            <if test="segId != null">
                seg_id = #{segId},
            </if>
            <if test="tidifValue != null">
                tidif_value = #{tidifValue},
            </if>
            <if test="count != null">
                count = #{count},
            </if>
            <if test="weight != null">
                weight = #{weight},
            </if>
        </set>
