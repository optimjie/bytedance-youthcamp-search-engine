    <select id="selectOneRecordSeg" resultType="com.searchengine.entity.RecordSeg" parameterType="java.lang.Long">
        SELECT * FROM data_seg_relation WHERE data_id=#{dataId} AND seg_id=#{segId}
    </select>

    <select id="selectRecordBySeg" resultType="com.searchengine.entity.RecordSeg" parameterType="java.lang.Long">
        SELECT * FROM data_seg_relation WHERE seg_id=#{segId}
    </select>

    <insert id="insertRecordSeg" parameterType="com.searchengine.entity.RecordSeg">
        insert into data_seg_relation
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="dataId != null">
